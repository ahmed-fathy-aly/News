<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:tools="http://schemas.android.com/tools"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:transitionName="@string/transiation_feed_to_details"
            tools:context="ahmed.news.feed_item_details.FeedItemDetailsFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="8dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/text_view_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/primary_text"
            android:transitionName="@string/transiation_feed_to_details_title"
            android:layout_marginBottom="8dp"
            android:textSize="24sp"/>

        <ahmed.news.UI.FixedWidthImageView
            android:id="@+id/image_view_media"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:transitionName="@string/transiation_feed_to_details_image"
            />

        <TextView
            android:id="@+id/text_view_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:textColor="@color/secondary_text"
            android:transitionName="@string/transiation_feed_to_details_date"
            android:textSize="18sp"/>

        <TextView
            android:id="@+id/text_view_description"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:textColor="@color/secondary_text"
            android:textSize="18sp"/>

        <TextView
            android:id="@+id/text_view_link"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/primary"
            android:layout_marginTop="24dp"
            android:textSize="18sp"/>

    </LinearLayout>

</ScrollView>
